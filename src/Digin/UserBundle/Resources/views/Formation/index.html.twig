<h1>Formation list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Desir_formation</th>
            <th>Intitule_formation</th>
            <th>Desir_reorientation</th>
            <th>Secteur_reorientation</th>
            <th>Commentaire</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('formation_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.desirformation }}</td>
            <td>{{ entity.intituleformation }}</td>
            <td>{{ entity.desirreorientation }}</td>
            <td>{{ entity.secteurreorientation }}</td>
            <td>{{ entity.commentaire }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('formation_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('formation_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('formation_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
