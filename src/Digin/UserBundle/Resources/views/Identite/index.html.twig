<h1>Identite list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Sexe</th>
            <th>Date_naissance</th>
            <th>Nationalite</th>
            <th>Adresse1</th>
            <th>Adresse2</th>
            <th>Ville</th>
            <th>Code_postal</th>
            <th>Email</th>
            <th>Tel</th>
            <th>Portable</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('identite_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nom }}</td>
            <td>{{ entity.prenom }}</td>
            <td>{{ entity.sexe }}</td>
            <td>{% if entity.datenaissance %}{{ entity.datenaissance|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.nationalite }}</td>
            <td>{{ entity.adresse1 }}</td>
            <td>{{ entity.adresse2 }}</td>
            <td>{{ entity.ville }}</td>
            <td>{{ entity.codepostal }}</td>
            <td>{{ entity.email }}</td>
            <td>{{ entity.tel }}</td>
            <td>{{ entity.portable }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('identite_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('identite_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('identite_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
